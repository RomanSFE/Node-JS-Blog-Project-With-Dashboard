<%- include('../../partials/head.ejs') %>

<div class="container my-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <div class="profile-piccssss">
                    <img src="<%= author.profilePics %>" class="img-thumbnail img-fluid">
                </div>
                <div class="profile-maneee">
                    <h4>Name: <strong><%= author.profile.name %></strong></h4>
                    <h5>Title: <%= author.profile.title %></h5>
                    <p><strong>Bio:</strong> <%= author.profile.bio %></p>

                    <div class="profile-all-social-links">

                        <h5 class="my2">Social Links:</h5>

                        <% if (author.profile.links.website) { %>
                            <span>
                                <a href="<%= author.profile.links.website %>" target="_blank">
                                    <i class="fas fa-globe"></i>
                                </a>
                            </span>
                        <% } %>
                        <% if (author.profile.links.facebook) { %>
                            <span>
                                <a href="<%= author.profile.links.facebook %>" target="_blank">
                                    <i class="fab fa-facebook"></i>
                                </a>
                            </span>
                        <% } %>
                        <% if (author.profile.links.twitter) { %>
                            <span>
                                <a href="<%= author.profile.links.twitter %>" target="_blank">
                                    <i class="fab fa-twitter"></i>
                                </a>
                            </span>
                        <% } %>
                        <% if (author.profile.links.github) { %>
                            <span>
                                <a href="<%= author.profile.links.github %>" target="_blank">
                                    <i class="fab fa-github-square"></i>
                                </a>
                            </span>
                        <% } %>
                    </div>
                </div>
                <div class="author-all-posts-secccttbb">
                    <div class="djsdhfhgh my-4">
                        <h5>Post Created By This Author:</h5>
                    </div>
                    <div class="row">
                        <% if(author.profile.posts.length == 0) { %>
                            <div class="post-emptyyy text-center text-muted">
                                <p>There is no posts available right now</p>
                            </div>
                        <% } else { %>
                            <% for( let post of author.profile.posts.reverse()) { %>
                                <div class="card col-sm-5 my-2">
                                    <% if(post.thumbnail) { %>
                                        <img class="img-fluid mt-2" src="<%= post.thumbnail %>" alt="">
                                    <% } %>
                                    <div class="card-body my-3">
                                        <a href="/explorer/<%= post._id %>" style="color: #222222;">
                                            <p class="my-2">
                                                <%= post.title %>
                                            </p>
                                        </a>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>
</html>
